<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:name="com.example.android.kitchendrive.FragmentMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context="com.example.android.cookpit.FragmentMain"
            tools:ignore="MergeRootFrame">

            <com.developers.coolprogressviews.SimpleArcProgress
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.1"
                android:background="#000000"
                app:arcRadius="30dp"
                app:colorofArc="@android:color/holo_green_light"
                android:id="@+id/arc_progress"
                android:visibility="gone" />

        </FrameLayout>


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_dark"
        android:layout_gravity="start"
        android:id="@+id/left_drawer"
        app:menu="@menu/drawer_option_menu"
        app:headerLayout="@layout/nav_header">


    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
