<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.cookpit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/chaudron"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:name=".cookpit"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.android.cookpit.MainActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".MainActivity" />


        </activity>

        <provider
            android:name="com.example.android.cookpit.data.cookpitProvider"
            android:authorities="@string/content_authority"
            android:readPermission="android.permission.permRead"
            android:exported="true"
            android:syncable="true" />

        <activity
            android:name="com.example.android.cookpit.DetailActivities.DetailDish"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name="com.example.android.cookpit.DetailActivities.EditActivity"
            android:parentActivityName=".DetailActivities.DetailDish"


            >


        </activity>

    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    />


</manifest>